type Query {
    userInfo(id: Int):User
    userInfoList(ids: [Int]): [User]
    coupon(id: Int): Coupon
    couponList(ids: [Int]): [Coupon]
    item(id: Int): ItemBaseInfo
    itemList(ids:[Int], ignore: String): [ItemBaseInfo]
    itemStockList(ids:[Int]):  [ItemStockInfo]
    # todo 配置一个嵌套的type，例如 SellerInfo，里边的子实体绑定了fetcher作各种调度，丰富数据结构
}


type User{
    userId: Int
    age: Int
    name: String
    email: String
    favoriteItemId: Int
    preferredItemIdList: [Int]
    acquiredCouponIdList: [Int]
}

type ItemBaseInfo{
    itemId: Int
    name: String
    salePrice: Int
    withCouponIdList: [Int]
    skuList: [Int]
    # 数据源默认没有该字段返回
    # 需要使用itemId从ItemStockInfoMap中获取
    stockAmount: Int
    couponList(couponIds:[Int]): [Coupon]
}

type ItemStockInfo{
    itemId: Int
    stockAmount: Int
}

type Sku{
    skuId: Int
    itemId:Int
    color: String
    size: Int
}

type Coupon{
    couponId: Int
    # 门槛
    base: Int
    # 券价格
    price: Int
    limitation: Int
    couponText: String
}